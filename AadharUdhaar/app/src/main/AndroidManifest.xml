<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hint.paranoid.aadharudhaar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BorrowActivity"
            android:label="@string/title_activity_borrow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LendActivity"
            android:label="@string/title_activity_lend"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddLendActivity"
            android:label="@string/title_activity_addor_edit_lend"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddBorrowActivity"
            android:label="@string/title_activity_add_borrow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowLendActivity"
            android:label="@string/title_activity_show_lend"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".barchart" />
        <activity android:name=".piechart" />
        <activity android:name=".linechart" />
    </application>

</manifest>